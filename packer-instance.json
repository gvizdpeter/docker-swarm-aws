{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_DEFAULT_REGION`}}",
    "aws_ami_id": "{{env `AWS_DEFAULT_AMI_ID`}}",
    "aws_instance_type": "{{env `TF_VAR_AWS_INSTANCE_TYPE`}}",
    "aws_instance_username": "{{env `TF_VAR_AWS_INSTANCE_USERNAME`}}",
    "aws_instance_shared_volume_mountpoint": "{{env `TF_VAR_AWS_SHARED_VOLUME_MOUNTPOINT`}}"    
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_ami_id`}}",
    "instance_type": "{{user `aws_instance_type`}}",
    "ssh_username": "{{user `aws_instance_username`}}",
    "ami_name": "aws-swarm-instance-{{timestamp}}"
    
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "/usr/bin/cloud-init status --wait",
      "sudo apt update",
      "sudo apt upgrade -y",
      "sudo apt install -y docker.io git binutils",
      "git clone https://github.com/aws/efs-utils",
      "cd efs-utils",
      "./build-deb.sh",
      "sudo apt -y install ./build/amazon-efs-utils*deb",
      "cd ..",
      "rm -rf efs-utils",
      "sudo systemctl enable --now docker",
      "sudo usermod -aG docker ${INSTANCE_USERNAME}",
      "sudo mkdir -p ${SHARED_VOLUME_MOUNTPOINT}"
    ],
    "environment_vars": [
      "INSTANCE_USERNAME={{user `aws_instance_username`}}",
      "SHARED_VOLUME_MOUNTPOINT={{user `aws_instance_shared_volume_mountpoint`}}"
    ]    
  }]  
}